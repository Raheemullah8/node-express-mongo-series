<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show All Data</title>
    <script src="https://cdn.tailwindcss.com"></script> <!-- Tailwind CSS CDN -->
</head>

<body class="bg-gray-100 font-sans">

    <!-- Navigation Link to /read -->
    <div class="text-center py-4">
        <a href="/" class="text-blue-500 hover:text-blue-700 font-semibold">Back to Add-Users</a>
    </div>

    <h1 class="text-center text-4xl font-bold py-6 bg-green-500 text-white">Show All Data</h1>

    <div class="container mx-auto px-6 py-12">
        <% if(user.length > 0){ %>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
                <% user.forEach((users) => { %>
                    <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition duration-300 ease-in-out transform hover:scale-105">
                        <!-- User Image -->
                        <img src="<%= users.image %>" alt="User Image" class="w-full h-48 object-cover rounded-t-lg mb-4">
                        
                        <!-- User Info -->
                        <h3 class="text-xl font-semibold text-gray-800"><%= users.name %></h3>
                        <p class="text-gray-600 text-sm"><%= users.email %></p>

                        <!-- Edit and Delete Buttons -->
                        <div class="mt-4 flex justify-between">
                            <!-- Edit Button -->
                            <a href="/edit/<%= users._id %>"
                               class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition duration-200">
                                Edit
                            </a>

                            <!-- Delete Button -->
                            <form action="/delete/<%= users._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?')">
                                <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition duration-200">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <!-- No users message -->
            <div class="text-center py-12">
                <h2 class="text-2xl font-semibold text-gray-800">No users found. Please add some users.</h2>
                <a href="/"
                   class="mt-4 inline-block px-6 py-2 bg-green-500 text-white font-semibold rounded-md hover:bg-green-600 transition duration-200">
                   Add User
                </a>
            </div>
        <% } %>
    </div>

</body>

</html>
