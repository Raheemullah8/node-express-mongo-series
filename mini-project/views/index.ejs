<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Task Management</title>
    <style>
        /* Custom styles for card hover effect */
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body class="bg-zinc-900 text-white">

    <!-- Main Container -->
    <div class="main w-full min-h-screen px-4 py-8">
        
        <!-- Header Section -->
        <div class="text-center mb-10">
            <h1 class="bg-zinc-700 text-xl font-bold p-4 rounded-md">Task Manager</h1>
        </div>

        <!-- Form Section -->
        <div class="form mb-10 bg-zinc-800 p-6 rounded-lg shadow-lg">
            <form action="create" method="post">
                <input type="text" name="title" class="block px-5 py-3 w-full rounded-md outline-none bg-zinc-700 mb-4 text-white" placeholder="Enter your task title">
                <textarea name="details" class="block px-5 py-3 bg-zinc-700 mt-2 w-full rounded-md outline-none resize-none text-white" placeholder="Write task details here"></textarea>
                <input class="mt-4 px-5 py-2 rounded-md bg-blue-500 hover:bg-blue-400 transition-colors cursor-pointer w-full" type="submit" value="Create Task">
            </form>
        </div>
        
        <!-- Task Cards Section -->
        <div class="task grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <% if(files.length > 0) { %>
                <% files.forEach((val) => { %>
                    <div class="card w-full bg-zinc-800 rounded-md shadow-md transform transition-all">
                        <div class="p-6">
                            <h2 class="text-lg font-bold mb-2 text-white"><%= val %></h2>
                            <a href="/file/<%= val %>" class="text-blue-400 hover:text-blue-300">Read More...</a>
                            
                            <!-- Styled Edit Button -->
                            <a href="/edit/<%= val %>" class="mt-4 inline-block px-5 py-2 rounded-md bg-blue-600 hover:bg-blue-500 text-white text-center font-semibold transition-colors transform hover:scale-105">Edit</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="w-full bg-zinc-800 rounded-md shadow-md p-6">
                    <p class="text-center font-semibold text-white">No Tasks Available</p>
                </div>
            <% } %>
        </div>
        
    </div>

</body>
</html>
